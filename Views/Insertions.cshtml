    // The Analytics script is only displayed if the site is live.
    if (!String.IsNullOrEmpty(WorkContext.CurrentSite.BaseUrl) 
    && WorkContext.HttpContext.Request.Url.Host == new Uri(WorkContext.CurrentSite.BaseUrl).Host)
    {
        Layout.Head.Add(New.Analytics(), "5");
    }

    //Layout.Navigation.Add(New.NavbarBranding(), "0"); // Site name and link to the home page
    Layout.Footer.Add(New.User(), "0"); // Login and dashboard links
