@{ 
    var showHamburger = Model.ShowHamburger;
    var showBrand = Model.ShowBrand ?? true;
    var dataTarget = Model.DataTarget;
}

<header class="navbar-header">
    @if (showHamburger) {
        @Display.MenuHamburger(DataTarget: dataTarget)
    }
    @if (showBrand) {
        @Display.SiteBrand()
    }
</header>
